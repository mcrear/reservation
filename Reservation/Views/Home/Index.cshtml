@{
    ViewData["Title"] = "Home Page";
}
@model Reservation.Models.ViewModel.JourneySearchModel

<div style="height:40px; background-color:#2F4EB4" class="mb-4"></div>
<form method="post" asp-action="Index" asp-controller="Journey">
    <div class="container">
        <div class="row mt-xl-4 mt-md-2">
            <div class="form-group col-xl-12 col-md-4 pt-2 pb-2 bg-white">
                <label>Nereden</label>
                <select class="form-control" id="SourceId" name="SourceId" asp-for="SourceId">
                </select>
            </div>
            <div class="form-group col-xl-12 col-md-4 pt-2 pb-2 bg-white">
                <label>Nereye</label>
                <select class="form-control" id="DestinationId" name="DestinationId" asp-for="DestinationId">
                </select>
            </div>
            <div class="input-group col-xl-12 col-md-4 pt-2 pb-2 bg-white">
                <div class="col-xl-8 col-8">
                    <label>Tarih</label>
                    <input type="date" id="dateInput" name="dateInput" value="new Date()" class="form-control" asp-for="DateInput">
                </div>
                <div class="col-xl-4 col-4">
                    <input type="button" id="today" name="today" class="form-control" onclick="setToday()" style="background-color:#707070" value="Bugün" />
                     <input type="button" id="tomorrow" name="tomorrow" class="form-control pt-2" onclick="setTomorrow()" style="background-color:#fff" value="Yarın" />
                </div>
            </div>
        </div>
        <div class="row mt-xl-5 mt-md-3">
            <div class="form-group col-xl-12 col-md-4 pt-4 pb-2">
                <button class="form-control" style="background-color: #2F4EB4; color:white">Bileti Bul</button>
            </div>
        </div>
        <div class="row mt-xl-5 mt-md-3 bg-white">
            <div class="col-xl-12 col-12">
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat.
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <environment names="Development">
        <script src="~/js/Home/Index.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script asp-append-version="true" src="~/js/Home/Index.js"></script>
    </environment>
}
